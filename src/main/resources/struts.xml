
<!DOCTYPE struts PUBLIC "-//Apache Software Foundation//DTD Struts Configuration 2.3//EN"
 "http://struts.apache.org/dtds/struts-2.3.dtd">
<struts>
  <package name="default" extends="struts-default">

    <action name="bookHostel" class="com.example.travel.action.BookingAction" method="bookHostel">
      <result name="success">/booking-success.jsp</result>
      <result name="error">/error.jsp</result>
    </action>

    <action name="bookRestaurant" class="com.example.travel.action.BookingAction" method="bookRestaurant">
      <result name="success">/booking-success.jsp</result>
      <result name="error">/error.jsp</result>
    </action>

    <action name="planTransport" class="com.example.travel.action.TransportAction" method="plan">
      <result>/transport.jsp</result>
    </action>

    <action name="addExpense" class="com.example.travel.action.ExpenseAction" method="addExpense">
      <result>/expense.jsp</result>
    </action>

    <action name="chatbotAction" class="com.example.travel.action.ChatbotAction">
      <result name="success">/chat.jsp</result>
    </action>

    <action name="translate" class="com.example.travel.action.TranslateAction">
      <result name="success">/translate.jsp</result>
      <result name="input">/translate.jsp</result>
      <result name="error">/error.jsp</result>
    </action>

    <action name="searchHotels" class="com.example.travel.action.HotelAction">
    <result name="success">/hotels.jsp</result>
    <result name="error">/error.jsp</result>
</action>
 
    <action name="planBudget" class="com.example.travel.action.BudgetPlanAction" method="planBudget">
      <result name="success">/budget-plan.jsp</result>
      <result name="input">/budget-plan.jsp</result>
      <result name="error">/error.jsp</result>
    </action>
 
  </package>
</struts>